<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
</head>
<body>
    <h2>User List</h2>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.user_id %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td>
                    <a href="/user/edit/<%= user.user_id %>">Edit</a>
                    <!-- New Code: Confirmation dialog for delete -->
                    <a href="/user/delete/<%= user.user_id %>" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                </td>
            </tr>
        <% }); %>
    </table>
</body>
</html>
